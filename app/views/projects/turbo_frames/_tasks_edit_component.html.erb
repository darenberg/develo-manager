<%= simple_form_for(task, url: dot_task_path(task.dot, task), method: :patch) do |f| %>
  <%= f.input :title %>
  <%= f.input :content %>
  <%= f.input :photo, as: :file %>
  <%= f.label :tags, "Tags (comma-separated)" %>
  <%= f.text_field :tag_names, value: task.formatted_tags %>
  <%= f.input :done, as: :boolean  %>
  <%= f.submit  %>
<% end %>
