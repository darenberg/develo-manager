<body class="bg-gradient-primary">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-9 col-lg-12 col-xl-10">
        <div class="card o-hidden border-0 my-5 orange-shadow">
          <div class="card-body p-0">
            <div class="row">
              <div class="p-5">
                <div class="text-center">
                  <h2>Update your project </h2>
                </div>
                <div class="class=mb-3" >
                  <%= simple_form_for(@project) do |f| %>
                    <%= f.input :title %>
                    <%= simple_fields_for :project_users do |p| %>
                      <%= select_tag 'project_users',
                        options_from_collection_for_select(User.all, :id, :email),
                        multiple: true, class: 'multiselectuser' %>
                    <% end %>
                    <div class="mt-3">
                     <input type="submit" name="commit" value="Update" data-disable-with="Update" class="form-btn">
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
